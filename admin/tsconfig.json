{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "allowJs": true,
        "outDir": "dist",
        "pretty": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}